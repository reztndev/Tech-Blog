<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>

  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <br>

  {{#if comments.length}}
    <div class="comment-list">
      <h3>Current comments:</h3>

      {{#each comments as |comment|}}
        <div class="card comment-card mb-3">
          <div class="card-body">
            <p class="card-text comment-content">{{comment.content}}</p>
          </div>
          <div class="card-footer comment-meta">
            Posted by {{comment.user.name}} on {{format_date comment.date_created}}
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}

</div>

<div class="text-center">

  <h3>Add a new comment:</h3>

    <form class="form new-comment-form" data-id="{{id}}">
      
      <div class="form-group">
        <label for="comment">Your comment below:</label>
        <textarea class="form-input custom-input" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">

        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

  <br><br><br>

  <p>Inside: post-detail.handlebars</p>
  
</div>



<script src="/js/comment.js"></script>